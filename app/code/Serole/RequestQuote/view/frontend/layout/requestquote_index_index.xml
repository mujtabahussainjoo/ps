<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
	<head>
        <title>Request Quotation Enquiry</title>
        <!-- 
		demo
		<css src="Serole_RequestQuote::css/css.css"/>
		<script src="Serole_RequestQuote::js/js.js"/>
		<css src="jquery/fileUploader/css/jquery.fileupload-ui.css"/>
		<script src="path/file.js" defer="defer"/>
		<link src="http://url.com" src_type="url"/>
		<remove src="path/remove/file.css"/>
		-->
    </head> 
    <body>
        <referenceContainer name="sidebar.main">
            <block class="Serole\RequestQuote\Block\Index\Sidebar" name="requestquote_index_sidebar" before="-" template="Serole_RequestQuote::requestquote_index_sidebar.phtml"/>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Serole\RequestQuote\Block\Index\Index" name="requestquote_index_index" template="Serole_RequestQuote::requestquote_index_index.phtml">
                <container name="form.additional.info" label="Form Additional Info"/>
            </block>
        </referenceContainer>
        <move element="form.additional.info" destination="requestquote_index_index" after="-" />
        <referenceBlock name="head.components">
            <block class="Magento\Framework\View\Element\Js\Components" name="captcha_page_head_components" template="Magento_Captcha::js/components.phtml"/>
        </referenceBlock>
        <referenceContainer name="form.additional.info">
            <block class="MSP\ReCaptcha\Block\Frontend\ReCaptcha" name="msp-recaptcha" after="-"
                   template="MSP_ReCaptcha::msp_recaptcha.phtml"
                   cacheable="false"
                   ifconfig="msp_securitysuite_recaptcha/frontend/enabled">

                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="msp-recaptcha" xsi:type="array">
                                <item name="component" xsi:type="string">MSP_ReCaptcha/js/reCaptcha</item>
                                <item name="zone" xsi:type="string">contact</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>