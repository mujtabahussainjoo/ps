<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
	    <referenceBlock name="page.main.title">
			<action method="setPageTitle">
				<argument translate="true" name="title" xsi:type="string">Top Brands of POS Hardware: Compatible with your POS System Software | OnlyPOS</argument>
			</action>
		</referenceBlock>
	    <referenceBlock name="head.additional">
        <block class="Magento\Catalog\Block\Product\View" name="all_brand_meta_tags" template="Megnor_ShopByBrand::megnor_brand/all_brand_meta_tags.phtml"/>
       </referenceBlock>
	    
        <referenceContainer name="content">
            <block class="Megnor\ShopByBrand\Block\Brandlist" name="brand_list" as="brandlist" template="Megnor_ShopByBrand::megnor_brand/brandlist.phtml" cacheable="false">
             
             </block>
        </referenceContainer>
    </body>
</page>
