<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
    <attribute name="class" value="megnor_brand_view"/>
    <referenceContainer name="content">
    <block class="Megnor\ShopByBrand\Block\View" name="brand.view"  template="Megnor_ShopByBrand::megnor_brand/view.phtml" cacheable="false"></block> 
	<block class="Megnor\ShopByBrand\Block\Product\ListProductnew" name="brand.view.new"  template="Magento_Catalog::product/list.phtml" cacheable="false">
		<block class="Magento\Catalog\Block\Product\ProductList\Toolbar" name="product_list_toolbar" template="Magento_Catalog::product/list/toolbar.phtml">
            <block class="Magento\Theme\Block\Html\Pager" name="product_list_toolbar_pager"/></block>
                <action method="setToolbarBlockName">
                    <argument name="name" xsi:type="string">product_list_toolbar</argument>
                </action>
	</block> 
    </referenceContainer>
    </body>
</page>